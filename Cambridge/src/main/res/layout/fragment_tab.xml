<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/empty_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:src="@drawable/story_text_empty_bg"/>
    <ListView
        android:id="@+id/id_senlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/imv_play_state_info"/>


    <LinearLayout
        android:id="@+id/read_bottom_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#031f22"
        android:paddingBottom="10dp">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


        <TextView
            android:id="@+id/tv_read_mix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_shape_corner_yellow"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:text="合成"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_read_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_shape_corner_yellow"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:text="发布"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_read_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape_circle_yellow"
            android:gravity="center"
            android:padding="5dp"
            android:text="44"
            android:textColor="#fff"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/imv_play_state_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/read_bottom_lin"

        android:background="#031f22"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/imv_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:text="00:00"
            android:textColor="#fff" />


        <SeekBar
            android:id="@+id/imv_seekbar_player"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progress="0"
            android:splitTrack="false"
            android:thumb="@drawable/headline_audio_thumb"
            android:thumbOffset="0dp" />

        <TextView
            android:id="@+id/imv_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:text="00:00"
            android:textColor="#fff" />
    </LinearLayout>



</RelativeLayout>
