<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/backlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/cloud_control"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="1dp"
        android:background="@drawable/border"
        android:padding="6dp" >

        <Button
            android:id="@+id/cloud_upload"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_shape"
            android:padding="4dp"
            android:text="@string/collection_upload"
            android:textColor="@color/whitesmoke" />

        <Button
            android:id="@+id/cloud_download"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_shape"
            android:padding="4dp"
            android:text="@string/collection_download"
            android:textColor="@color/whitesmoke" />
    </RelativeLayout>

    <ListView
        android:id="@+id/news_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/cloud_control"
        android:cacheColorHint="#00000000"
        android:divider="#dcdcdc"
        android:dividerHeight="1dp"
        android:fastScrollEnabled="true" >
    </ListView>

    <ListView
        android:id="@+id/sentence_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/cloud_control"
        android:cacheColorHint="#00000000"
        android:divider="#dcdcdc"
        android:dividerHeight="1dp"
        android:fastScrollEnabled="true"
        android:visibility="gone" >
    </ListView>

</RelativeLayout>