<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--主要内容-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/empty_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:src="@drawable/story_text_empty_bg"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:layout_marginTop="10dp"
            android:layout_above="@+id/play_control"
            android:scrollbars="vertical" />
        <RelativeLayout
            android:id="@+id/play_control"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-1dp"
            android:background="#031f22"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/switch_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_toLeftOf="@id/backward"
                android:padding="3dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/shape_gray_btn"
                android:text="原/译"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/backward"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="20dp"
                android:layout_toLeftOf="@+id/iv_playcontrol"
                android:background="@drawable/new_bac" />

            <Button
                android:id="@+id/speed"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@+id/iv_playcontrol"
                android:background="@drawable/new_fast" />

            <ImageView
                android:id="@+id/iv_playcontrol"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:src="@drawable/new_play" />

            <TextView
                android:id="@+id/tv_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="20dp"
                android:text="1.0x"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seekbar"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />

            <com.iyuba.camstory.view.CustomTextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/seekbar"
                android:layout_toEndOf="@+id/seekbar"
                android:text="0:00"
                android:textColor="#ffffff" />

            <com.iyuba.camstory.view.CustomTextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_duration"
                android:layout_alignBottom="@+id/tv_duration"
                android:layout_toStartOf="@+id/seekbar"
                android:text="0:00"
                android:textColor="#ffffff" />

        </RelativeLayout>
    </RelativeLayout>

    <!--广告显示-->
    <include
        android:id="@+id/adLayout"
        layout="@layout/layout_ad_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>