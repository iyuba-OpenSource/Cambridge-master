<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="8.0dip">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/go" />

        <TextView
            android:id="@+id/chapter_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:padding="10dp"
            android:text="chapter1"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/progress_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/left_round"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:orientation="vertical">
            <com.iyuba.camstory.widget.RoundProgressBar2
                android:id="@+id/img_sound_progress"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_sound_progress" />
            <TextView
                android:id="@+id/tv_sound_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0%"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/left_round"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:orientation="vertical">
            <com.iyuba.camstory.widget.RoundProgressBar2
                android:id="@+id/img_evaluate_progress"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/ic_evaluate_progress" />
            <TextView
                android:id="@+id/tv_evaluate_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0%"
                android:textColor="@color/black"
                android:textSize="10sp" />
        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</LinearLayout>