<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/rank_olive"
            android:layout_width="69dp"
            android:layout_height="56dp"
            android:layout_centerInParent="true"
            android:background="@drawable/olive_leaf" />

        <com.iyuba.camstory.lycam.widget.imageview.CircleImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/rank_user_image2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3.5dp"/>

        <TextView
            android:id="@+id/rank_user_image_text2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3.5dp"
            android:gravity="center"
            android:text="C"
            android:textColor="@color/whitesmoke" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rank_olive"
            android:layout_centerHorizontal="true"
            android:src="@drawable/champion" />
    </RelativeLayout>

    <TextView
        android:id="@+id/rank_user_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="16sp"
        tools:text="第一名 First" />

    <TextView
        android:id="@+id/champion_read_words2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="12323"
        android:visibility="gone"
        android:textStyle="bold"
        tools:text="李白"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/username2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rank_info2"
            android:layout_toEndOf="@+id/my_image2"
            android:textSize="12sp"
            tools:text="李白"/>

        <TextView
            android:id="@+id/rank_info2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="12dp"
            tools:text="句子总数:10,得分100"/>

        <com.iyuba.camstory.lycam.widget.imageview.CircleImageView
            android:id="@+id/my_image2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/rank_info2"
            android:layout_toLeftOf="@+id/rank_info2"
            />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />
    <com.iyuba.camstory.widget.PullToRefreshView
        android:id="@+id/list_view_refresh"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
    <ListView
        android:id="@+id/rank_list2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </com.iyuba.camstory.widget.PullToRefreshView>


</LinearLayout>
