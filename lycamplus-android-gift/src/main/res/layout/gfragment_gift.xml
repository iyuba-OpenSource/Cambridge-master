<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:FlashView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:filterTouchesWhenObscured="false">

    <tv.lycam.gift.widget.flash.FlashView
        android:id="@+id/flashview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        FlashView:designDPI="500"/>

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <!--聊天信息-->
        <LinearLayout
            android:id="@+id/igift_chatzone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/igift_msglist"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@null"
                android:divider="@null"
                android:listSelector="@color/transparent"
                android:overScrollMode="never"
                android:requiresFadingEdge="none"
                android:scrollbars="none"
                android:visibility="visible"/>

            <LinearLayout
                android:id="@+id/igift_sendzone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/gray_alpha55"
                android:gravity="center_vertical"
                android:minHeight="40dp"
                android:orientation="horizontal"
                android:padding="2dp"
                android:visibility="invisible">

                <CheckBox
                    android:id="@+id/igift_danmaku"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_dan_selector"
                    android:button="@null"
                    android:padding="4dp"/>

                <EditText
                    android:id="@+id/igift_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_frame_gray55_white2"
                    android:imeOptions="actionSend"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/translucent_black"/>

                <ImageView
                    android:id="@+id/igift_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="4dp"
                    android:src="@drawable/img_send_selector"/>
            </LinearLayout>
        </LinearLayout>

        <!--礼物列表-->
        <LinearLayout
            android:id="@+id/igift_gifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray99"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border_white2"
                android:padding="4dp">

                <TextView
                    android:id="@+id/i_gem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:drawableLeft="@drawable/img_gem"
                    android:text="@string/item_gemstone"
                    android:textColor="@color/white1"/>

                <TextView
                    android:id="@+id/igift_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/i_gem"
                    android:textColor="#9900BF7E"/>
            </RelativeLayout>

            <tv.lycam.gift.widget.auto.Auto2ViewPager
                android:id="@+id/igift_giftlists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:requiresFadingEdge="none"/>

            <LinearLayout
                android:id="@+id/igift_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_white2"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/igift_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="@string/item_selected_scene"
                    android:textColor="@color/white1"/>


                <ImageView
                    android:id="@+id/igift_give"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:src="@drawable/img_give_selector"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <!--工具栏-->
    <RelativeLayout
        android:id="@+id/igift_tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/mainLayout"
        android:gravity="center_vertical"
        android:padding="4dp">

        <ImageView
            android:id="@+id/igift_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:src="@drawable/img_message_selector"/>

        <ImageView
            android:id="@+id/igift_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:src="@drawable/img_top_selector"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/anim_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/mainLayout"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <tv.lycam.gift.widget.GiftShowView
            android:id="@+id/anim_gift1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:translationX="-350dp"
            android:visibility="invisible"/>

        <tv.lycam.gift.widget.GiftShowView
            android:id="@+id/anim_gift2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:translationX="-350dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <master.flame.danmaku.ui.widget.DanmakuView
        android:id="@+id/danmakuView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@id/mainLayout"/>

    <tv.lycam.gift.widget.pop.HeartLayout
        android:id="@+id/heart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/igift_tool"
        android:background="@color/transparent"/>
</RelativeLayout>